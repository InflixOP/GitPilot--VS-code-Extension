{
  "name": "gitpilot",
  "displayName": "GitPilot - AI Git Assistant",
  "description": "AI-powered Git assistant that converts natural language to Git commands",
  "version": "1.1.1",
  "publisher": "InflixOp",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "ai",
    "assistant",
    "natural language",
    "version control"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitpilot.executeCommand",
        "title": "GitPilot: Execute Command",
        "icon": "$(robot)"
      },
      {
        "command": "gitpilot.openPanel",
        "title": "GitPilot: Open Panel",
        "icon": "$(comment-discussion)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "gitpilot.executeCommand",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ],
      "scm/title": [
        {
          "command": "gitpilot.openPanel",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "GitPilot",
      "properties": {
        "gitpilot.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key",
          "order": 1
        },
        "gitpilot.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API Key (optional)",
          "order": 2
        },
        "gitpilot.defaultModel": {
          "type": "string",
          "enum": ["gemini", "groq-llama-3.1", "groq-llama-3.3", "deepseek"],
          "default": "gemini",
          "description": "Default AI model to use",
          "order": 3
        },
        "gitpilot.autoConfirm": {
          "type": "boolean",
          "default": false,
          "description": "Auto-confirm destructive operations",
          "order": 4
        },
        "gitpilot.showExplanations": {
          "type": "boolean",
          "default": true,
          "description": "Show explanations for generated commands",
          "order": 5
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitpilot",
          "title": "GitPilot",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "gitpilot": [
        {
          "id": "gitpilotPanel",
          "name": "AI Git Assistant",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "child_process": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/InflixOp/gitpilot.git"
  },
  "license": "MIT",
  "icon": "icon.png"
}
